<hibernate-configuration>

    <session-factory>
        <mapping resource="com/cortexits/pharmacy/model/Application.hbm.xml" />
        <mapping resource="com/cortexits/pharmacy/model/Store.hbm.xml" />
        <mapping resource="com/cortexits/pharmacy/model/User.hbm.xml" />
        <mapping resource="com/cortexits/pharmacy/model/UserPermission.hbm.xml" />
        <mapping resource="com/cortexits/pharmacy/model/UserType.hbm.xml" />
        <mapping resource="com/cortexits/pharmacy/model/StoreSession.hbm.xml" />
        <mapping resource="com/cortexits/pharmacy/model/StoreSessionControl.hbm.xml" />
    </session-factory>

</hibernate-configuration>